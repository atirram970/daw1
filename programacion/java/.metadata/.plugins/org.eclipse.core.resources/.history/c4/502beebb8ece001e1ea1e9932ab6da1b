import java.util.Arrays;
import java.util.InputMismatchException;
import java.util.Scanner;

public class LanzadorTienda {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.println("\t\t\t\t***\tBienvenido a Decathlon\t***");
        boolean salir = false;
        
        do {
            try {
                int opcion;
                mostrarMenu();
                opcion = leerOpcion();

                switch (opcion) {
                    case 1:
                        System.out.println("Has elegido Ver el código completo del artículo");
                        mostrarCodigoCompleto();
                        break;
                    case 2:
                        System.out.println("Has elegido Ver la descripción del artículo");
                        mostrarDescripcion();
                        break;
                    case 3:
                        System.out.println("Has elegido Ver el código de la ciudad");
                        mostrarCodigoCiudad();
                        break;
                    case 4:
                        System.out.println("Has elegido Ver el código de la tienda");
                        mostrarCodigoTienda();
                        break;
                    case 5:
                        System.out.println("Has elegido Ver el código del artículo");
                        mostrarCodigoArticulo();
                        break;
                    case 6:
                        System.out.println("Has elegido Ver el tipo de artículo");
                        mostrarTipoArticulo();
                        break;
                    case 7:
                        System.out.println("Has elegido Crear un artículo");
                        crearArticulo();
                        break;
                    case 8:
                        System.out.println("Has elegido Decrementar unidades");
                        decrementarUnidades();
                        break;
                    case 9:
                        System.out.println("Has elegido Consultar unidades");
                        consultarUnidades();
                        break;
                    case 10:
                        System.out.println("Has elegido Salir");
                        salir = salirAplicacion();
                        break;
                    default:
                        System.out.println("Has elegido una opción incorrecta, elige una opción entre el 1 y el 10: ");
                        break;
                }
            } catch (InputMismatchException IME) {
                System.out.println("Has introducido una letra en lugar de un número del 1 al 10");
                scan.next();
            }
        } while (!salir);
    }

    private static void mostrarMenu() {
