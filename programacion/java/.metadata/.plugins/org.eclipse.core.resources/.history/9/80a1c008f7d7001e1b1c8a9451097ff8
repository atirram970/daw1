package examen;

public class Tecnico extends Empleado{
	// código de la clase Tecnico
	private int categoria;
	
	//constructor
		/**
		 * @param dni
		 * @param nombre
		 * @param apellidos
		 * @param sueldoBase
		 * @param categoria
		 */
	public Tecnico(String dni, String nombre, String apellidos, double sueldoBase, int categoria) {
		super(apellidos, apellidos, apellidos, sueldoBase);
		this.categoria = categoria;
	}

	//getters y setters
	/**
	 * getter de sueldo
	 */
	public double getSueldo() {
		return this.getSueldoBase();
	}
	
	/**
	 * setter de sueldo
	 */
	public double setSueldo() {
		return this.getSueldoBase() + (this.categoria*3);
	}
	
	//Métodos
	@Override
	public void mostrarDatos() {
		//usar el string builder del Imprimible y hacerle un append de las cosas que cambian resprecto a Empleado
		//sb.append(categoria);
	}
	
}
