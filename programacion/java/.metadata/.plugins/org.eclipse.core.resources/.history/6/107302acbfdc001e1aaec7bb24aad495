package caja;

public class pruebaArray {

	public class Main {
	    public static void main(String[] args) {
	        // Crear una matriz 4x4
	        int[][] matriz = new int[4][4];
	        for (int i = 0; i < 4; i++) {
	            for (int j = 0; j < 4; j++) {
	                matriz[i][j] = i * 4 + j;
	            }
	        }

	        // Imprimir los elementos del borde
	        for (int i = 0; i < 4; i++) {
	            for (int j = 0; j < 4; j++) {
	                if (i == 0 || j == 0 || i == 3 || j == 3) {
	                    System.out.print(matriz[i][j] + " ");
	                }
	            }
	            System.out.println();
	        }
	    }
	}

}
