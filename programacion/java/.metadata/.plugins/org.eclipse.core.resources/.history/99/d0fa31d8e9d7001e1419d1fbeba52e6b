package examen;

public class Comercial extends Empleado{
	// código de la clase Comercial
	private double ventas;
	
	//constructor
			/**
			 * @param dni
			 * @param nombre
			 * @param apellidos
			 * @param sueldoBase
			 */
		public Comercial(String dni, String nombre, String apellidos, double sueldoBase) {
			super(apellidos, apellidos, apellidos, sueldoBase);
			this.ventas = ventas;
		}

	//getters y setters
		/**
		 * @param ventas the ventas to set
		 */
		public void setVentas(double ventas) {
			this.ventas = ventas;
		}
		
		/*
		 * @param sueldoBase 
		 */
		public void getSueldo(double sueldoBase) {
			this.sueldoBase = sueldoBase;
		}
		
		/**
		 * setter de sueldo
		 */
		public double setSueldo() {
			return this.getSueldoBase() + (this.ventas*1.1);
		}		
		//Métodos
		@Override
		public void mostrarDatos() {
			//usar el string builder del Imprimible y hacerle un append de las cosas que cambian resprecto a Empleado
			//sb.append(ventas);
		}
}
