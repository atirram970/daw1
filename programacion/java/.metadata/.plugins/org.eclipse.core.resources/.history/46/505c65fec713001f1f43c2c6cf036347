package RepasoExamenUD6y7.ud6.gestisimal;

import java.util.Objects;

public class Articulo {
	//Atributos
	String codigo;
	String descripcion;
	float pc;
	float pv;
	int stock;
	
	//Constructor
	/**
	 * @param codigo
	 * @param descripcion
	 * @param pc
	 * @param pv
	 * @param stock
	 */
	public Articulo(String codigo, String descripcion, float pc, float pv, int stock) {
		super();
		this.codigo = codigo;
		this.descripcion = descripcion;
		this.pc = pc;
		this.pv = pv;
		this.stock = stock;
	}

	//Getters y setters
	/**
	 * @return the codigo
	 */
	public String getCodigo() {
		return codigo;
	}

	/**
	 * @param codigo the codigo to set
	 */
	public void setCodigo(String codigo) {
		this.codigo = codigo;
	}

	/**
	 * @return the descripcion
	 */
	public String getDescripcion() {
		return descripcion;
	}

	/**
	 * @param descripcion the descripcion to set
	 */
	public void setDescripcion(String descripcion) {
		this.descripcion = descripcion;
	}

	/**
	 * @return the pc
	 */
	public float getPc() {
		return pc;
	}

	/**
	 * @param pc the pc to set
	 */
	public void setPc(float pc) {
		this.pc = pc;
	}

	/**
	 * @return the pv
	 */
	public float getPv() {
		return pv;
	}

	/**
	 * @param pv the pv to set
	 */
	public void setPv(float pv) {
		this.pv = pv;
	}

	/**
	 * @return the stock
	 */
	public int getStock() {
		return stock;
	}

	/**
	 * @param stock the stock to set
	 */
	public void setStock(int stock) {
		this.stock = stock;
	}

	//MÃ©todos
	@Override
	public int hashCode() {
		return Objects.hash(codigo);
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Articulo other = (Articulo) obj;
		return Objects.equals(codigo, other.codigo);
	}

	@Override
	public String toString() {
		return "Articulo [codigo=" + codigo + ", descripcion=" + descripcion + ", pc=" + pc + ", pv=" + pv + ", stock="
				+ stock + "]";
	}
}