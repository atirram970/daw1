package tiendaDeportes;

import java.util.InputMismatchException;
import java.util.Scanner;

public class LanzadorTienda {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);

        System.out.println("\t\t\t\t***\tBienvenido a Decatlon\t***");
        boolean salir = false;
        do {
            try {
                int opcion = 0;
                mostrarMenu();
                opcion = leerTeclado();

                switch (opcion) {
                    case 1:
                        System.out.println("has elegido Ver el código completo del artículo");
                        mostrarCodigoCompleto();
                        break;
                    case 2:
                        System.out.println("has elegido Ver la descripción del artículo");
                        mostrarDescripcion();
                        break;
                    case 3:
                        System.out.println("has elegido Ver el código de la ciudad");
                        mostrarCodigoCiudad();
                        break;
                    case 4:
                        System.out.println("has elegido Ver el código de la tienda");
                        mostrarCodigoTienda();
                        break;
                    case 5:
                        System.out.println("has elegido Ver el código del artículo");
                        mostrarCodigoArticulo();
                        break;
                    case 6:
                        System.out.println("has elegido Ver el tipo de artículo");
                        mostrarTipoArticulo();
                        break;
                    case 7:
                        System.out.println("has elegido Crear un artículo");
                        crearArticulo();
                        break;
                    case 8:
                        System.out.println("has elegido Decrementar unidades");
                        decrementarUnidades();
                        break;
                    case 9:
                        System.out.println("has elegido Consultar unidades");
                        consultarUnidades();
                        break;
                    case 10:
                        System.out.println("Has elegido Salir");
                        salir = salirAplicacion();
                        break;
                    default:
                        System.out.println("Has elegido una opción incorrecta, elige una opción entre el 1 y el 8: ");
                        break;
                }
            } catch (InputMismatchException IME) {
                System.out.println("Has introducido una letra en lugar de un número del 1 al 8");
                scan.next();
            }
        } while (!salir);
    }

    /*
     * 1. Ver el código completo del artículo
     */
    private static void mostrarCodigoCompleto() {
        Scanner scan = new Scanner(System.in);
        System.out.println("Dame el codigo del producto: EJEMPLO DE USO = 13010300009914");
        String codigo = scan.nextLine();

        if (!codigo.matches("[0-9]{14}")) {
            System.out.println("El código del producto debe tener 14 dígitos.");
            return;
        }

        int codigoCiudad = Integer.parseInt(codigo.substring(0, 2));
        int codigoTienda = Integer.parseInt(codigo.substring(2, 4));
        int codigoTipoArticulo = Integer.parseInt(codigo.substring(4, 6));
        int codigoArticulo = Integer.parseInt(codigo.substring(6, 12));
        int codigoControl = Integer.parseInt(codigo.substring(12, 14));

        System.out.println(codigoCiudad);
        System.out.println(codigoTienda);
        System.out.println(codigoTipoArticulo);
        System.out.println(codigoArticulo);
        System.out.println(codigoControl);

        //hacer comprobacion codigoControl esta correcto
        int comprobarCodigoControl = (codigoCiudad + codigoTienda + codigoArticulo) % 99;
        if (comprobarCodigoControl != codigoControl) {
            System.out.println("El codigo esta incorrecto, intentelo de nuevo");
        }
    }

