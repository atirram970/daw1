package examen;

public abstract class Empleado implements Imprimible {
		// código de la clase Empleado
		private String dni;
		private String nombre;
		private String apellidos;
		protected double sueldoBase;
		
		//constructor
		/**
		 * @param dni
		 * @param nombre
		 * @param apellidos
		 * @param sueldoBase
		 */
		public Empleado(String dni, String nombre, String apellidos, double sueldoBase) {
			this.dni = dni;
			this.nombre = nombre;
			this.apellidos = apellidos;
			this.sueldoBase = sueldoBase;
		}
	
		//getters y setters
		/**
		 * @return the sueldoBase
		 */
		public double getSueldoBase() {
			return sueldoBase;
		}
	
		/**
		 * @param sueldoBase the sueldoBase to set
		 */
		public void setSueldoBase(double sueldoBase) {
			if (sueldoBase < 1134){
				throw new IllegalArgumentException("El sueldo base debe de ser mayor a 1134€");
			}
			else{
				this.sueldoBase = sueldoBase;
			}
	
		}
	
		/**
		 * @return the dni
		 */
		public String getDni() {
			return dni;
		}
	
		/**
		 * @return the nombre
		 */
		public String getNombre() {
			return nombre;
		}
	
		/**
		 * @return the apellidos
		 */
		public String getApellidos() {
			return apellidos;
		}
		
		@Override
		public abstract void mostrarDatos();
		
	}
