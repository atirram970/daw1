package tiendaDeportes;

import java.util.Arrays;

public class ArticuloDeportivo {
    //atributos
    private int codigoArticuloCompleto;
    private String nombre;
    private int precio;
    private int cantidad;
    private String[] articulos;

    //constructores
    /*
     * con los valores por defecto
     */
    public ArticuloDeportivo(int codigoArticuloCompleto, String nombre, int precio, int cantidad) {
        this.codigoArticuloCompleto = codigoArticuloCompleto;
        this.nombre = nombre;
        this.precio = precio;
        this.cantidad = cantidad;
    }

    /*
     * con los suficientes para darle identidad a un articulo
     */
    public ArticuloDeportivo(int codigoArticuloCompleto, String nombre, int precio, int cantidad, String descripcion) {
        this.codigoArticuloCompleto = codigoArticuloCompleto;
        this.nombre = nombre;
    }

    //getters y setters
    /**
     * @return the codigoArticuloCompleto
     */
    public int getCodigoArticuloCompleto() {
        return codigoArticuloCompleto;
    }

    /**
     * @param codigoArticuloCompleto the codigoArticuloCompleto to set
     */
    public void setCodigoArticuloCompleto(int codigoArticuloCompleto) {
        this.codigoArticuloCompleto = codigoArticuloCompleto;
    }

    /**
     * @return the nombre
     */
    public String getNombre() {
        return nombre;
    }

    /**
     * @param nombre the nombre to set
     */
    public void setNombre(String nombre) {
        this.nombre = nombre;
    }

    /**
     * @return the precio
     */
    public int getPrecio() {
        return precio;
    }

    /**
     * @param precio the precio to set
     */
    public void setPrecio(int precio) {
        this.precio = precio;
    }

    /**
     * @return the cantidad
     */
    public int getCantidad() {
        return cantidad;
    }

    /**
     * @param cantidad the cantidad to set
     */
    public void setCantidad(int cantidad) {
        this.cantidad = cantidad;
    }

    /**
     * @return the articulos
     */
    public String[] getArticulos() {
        return articulos;
    }

    /**
     * @param articulos the articulos to set
     */
    public void setArticulos(String[] articulos) {
        this.articulos = articulos;
    }

    //métodos
    /*
     * Metodo para comprobar que la descripcion del articulo no supere los 40 caracteres
     */
    public static boolean validarDescripcion(String descripcion) {
        boolean devolver = false;
        if (descripcion.length() == 40) {
            devolver = true;
        }
        return devolver;
    }

    /*
     * Método para comprobar que el codigo del articulo está correcto
     */
    public static boolean validarCodigoArticulo(String codigoCompleto) {
        boolean resultado = false;
        String codigoCompletoArticulo = codigoCompleto;
        if (!codigoCompletoArticulo.matches("[0-9]{14}")) {
            System.out.println("El código tiene la cantidad incorrecta de numeros o no se han introducido numeros");
            return resultado;
        }

        int codigoCiudad = Integer.parseInt(codigoCompletoArticulo.substring(0, 2));
        int codigoTienda = Integer.parseInt(codigoCompletoArticulo.substring(2, 4));
        //int codigoTipoArticulo = Integer.parseInt(codigoCompletoArticulo.substring(4, 6));
        int codigoArticulo = Integer.parseInt(codigoCompletoArticulo.substring(6, 12));
        int codigoControl = Integer.parseInt(codigoCompletoArticulo.substring(12, 14));

        //hacer comprobacion codigoControl esta correcto
        int comprobarCodigoControl = (codigoCiudad + codigoTienda + codigoArticulo) % 99;
        if (comprobarCodigoControl == codigoControl) {
            System.out.println("El código esta correcto");
            resultado = true;
        } else {
            System.out.println("El código no esta correcto");
        }

        return resultado;
    }

    /*
     * Método para agregar unidades a un articulo
     */
    public void aumentarUnidades() {
        this.cantidad++;
    }

    /*
     * Metodo toString
     */

    @Override
    public String toString() {
        return "ArticuloDeportivo{" +
                "codigoArticuloCompleto=" + codigoArticuloCompleto +
                ", nombre='" + nombre + '\'' +
                ", precio=" + precio +
                ", cantidad=" + cantidad +
                ", articulos=" + Arrays.toString(articulos) +
                '}';
    }
}